# CnCNet Tunnel Server - Environment Configuration
# Copy this file to .env and fill in your values.
# docker-compose automatically loads .env from the same directory.

# ── Server ────────────────────────────────────────────────────────────────────
CNCNET_SERVER__NAME=My CnCNet Server
CNCNET_SERVER__MAXCLIENTS=200
CNCNET_SERVER__CLIENTTIMEOUT=60

# ── Web Dashboard ─────────────────────────────────────────────────────────────
# Password for the web dashboard. Leave empty to disable authentication.
CNCNET_MAINTENANCE__PASSWORD=

# ── Master Server ─────────────────────────────────────────────────────────────
# Set to false to run a private server (not listed on cncnet.org)
CNCNET_MASTERSERVER__ENABLED=true
CNCNET_MASTERSERVER__PASSWORD=

# ── Tunnel Ports ──────────────────────────────────────────────────────────────
CNCNET_TUNNELV3__PORT=50001
CNCNET_TUNNELV2__PORT=50000

# ── Security ──────────────────────────────────────────────────────────────────
CNCNET_TUNNELV3__IPLIMIT=8
CNCNET_TUNNELV2__IPLIMIT=4
CNCNET_SECURITY__IPBLACKLISTDURATIONHOURS=24

# ── Web Monitor Port ──────────────────────────────────────────────────────────
CNCNET_WEBMONITOR__PORT=1337

# ── Logging ───────────────────────────────────────────────────────────────────
# Levels: Verbose, Debug, Information, Warning, Error, Fatal
CNCNET_LOGGING__MINIMUMLEVEL=Information
